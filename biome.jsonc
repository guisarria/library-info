{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["ultracite/core", "ultracite/next", "ultracite/react"],
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "!node_modules",
      "!.next",
      "!dist",
      "!build",
      "!src/components/ui",
      "!src/styles/globals.css"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "trailingCommas": "none",
      "enabled": true
    }
  },
  "css": {
    "formatter": {
      "enabled": false
    },
    "linter": {
      "enabled": false
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noUnknownAtRules": "off",
        "noConsole": "off"
      },
      "correctness": {
        "noUnusedVariables": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "useImportType": "off",
        "noMagicNumbers": "off",
        "noNestedTernary": "off",
        "noUselessElse": "on",
        "useConsistentTypeDefinitions": {
          "level": "warn",
          "fix": "safe",
          "options": {
            "style": "type"
          }
        }
      },
      "a11y": {
        "useButtonType": "off",
        "noNoninteractiveElementInteractions": "off",
        "noStaticElementInteractions": "off"
      },
      "nursery": {
        "noShadow": "off",
        "useSortedClasses": {
          "level": "info",
          "fix": "safe",
          "options": {
            "functions": ["clsx", "cva", "cn"]
          }
        }
      }
    },
    "domains": {
      "next": "recommended",
      "react": "recommended"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "recommended": true,
      "source": {
        "organizeImports": "on",
        "useSortedAttributes": "on",
        "useSortedProperties": "on"
      }
    }
  }
}
